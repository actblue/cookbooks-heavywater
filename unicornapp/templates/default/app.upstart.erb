description    "Web application process monitoring tool"

start on runlevel [2345]
stop on runlevel [!2345]

expect daemon
respawn

env PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

pre-start script
  mkdir -p /var/run/unicorn
  chown www-data:www-data /var/run/unicorn
end script

exec bluepill load /etc/bluepill/app

post-stop script
  pkill unicorn_rails
end script
